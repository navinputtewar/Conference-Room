<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <div class="col-lg-12">
      <%= f.email_field :email, :placeholder => "*Company Email", :class => "form-control form-round-field"%>
    </div>
  </div><br>

  <div class="form-group">
    <div class="col-lg-12">
      <%= f.password_field :password, :placeholder => "*Password", autocomplete: "off", :class => "form-control form-round-field"%>
    </div>
  </div><br>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %><br>

  <div class="form-group">
    <div class="col-lg-12">
      <%= f.submit "Sign In", class: "btn btn-primary"%>
    </div>
  </div>
<% end %><br>

<%= render "devise/shared/links" %>
